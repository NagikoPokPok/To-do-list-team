# Environment Configuration for Todo List Application
# Copy this file to .env and fill in your actual values

# Application Settings
APP_NAME="Todo List Team"
APP_URL="http://localhost:8000"
SECRET_KEY="your-super-secret-key-change-this-in-production-make-it-long-and-random"
ENVIRONMENT="development"
DEBUG=true

# Database
DATABASE_URL="sqlite:///./todo_app.db"

# JWT Token
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM="HS256"

# Email Configuration (Gmail example)
SMTP_SERVER="smtp.gmail.com"
SMTP_PORT=587
SMTP_USERNAME="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"  # Use App Password for Gmail
EMAIL_FROM="your-email@gmail.com"

# 2FA Configuration
TOTP_SECRET_KEY="your-totp-secret-key-for-2fa"

# Notes:
# - For Gmail, you need to enable 2-step verification and create an App Password
# - Never commit the .env file to version control
# - Change SECRET_KEY to a long random string in production